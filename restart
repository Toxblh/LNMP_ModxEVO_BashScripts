#!/bin/bash
echo "

################################################################################
##############                    RESTART NGINX                 ################
################################################################################

"
/etc/init.d/nginx restart
echo "

################################################################################
##############                    RESTART PHP-FPM               ################
################################################################################

"
/etc/init.d/php5-fpm restart
echo "

################################################################################
##############                    RESTART MySQL                 ################
################################################################################

"
service mysql restart
echo "

################################################################################
##############                        FINISH                    ################
################################################################################

"
